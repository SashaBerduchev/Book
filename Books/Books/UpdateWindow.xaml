<Window x:Class="Books.UpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Books"
        mc:Ignorable="d"
        Title="UpdateWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox Name="NameBook" Margin="90,15,15,15"/>
        <TextBox Name="Description" Grid.Row="2" Margin="90,10,10,10"/>
        <TextBox Name="Count" Grid.Row="3" Margin="90,10,10,10"/>
        <DatePicker Name="DateTime" HorizontalAlignment="Left" Margin="90,22,0,0" Grid.Row="1" VerticalAlignment="Top" Height="32" Width="253"/>
        <Button Content="Изменить" HorizontalAlignment="Left" Margin="47,10,0,0" Grid.Row="4" VerticalAlignment="Top" Width="489" Height="44" Click="Button_Click" />
    </Grid>
</Window>
